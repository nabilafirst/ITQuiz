<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageViewBasic1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageViewBasic2"
        android:background="@drawable/basic1backgroud" />

    <ImageView
        android:id="@+id/imageViewBasic2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageViewBasic3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/basic2background" />

    <ImageView
        android:id="@+id/imageViewBasic3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="97dp"
        android:background="@drawable/basic3background" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/webquiz" />
</RelativeLayout>
